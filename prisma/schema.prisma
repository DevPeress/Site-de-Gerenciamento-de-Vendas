generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id    Int    @id @default(autoincrement())
  nome  String
  email String @unique
  senha String
  loc String
  cell String
  rg String
  foto String
}

model Vendas {
  id Int @id @default(autoincrement())
  idLoja  Int
  comprador   Int
  rg  String
  status Int @default(1)
  order String
}

model Produtos {
  id Int @id @default(autoincrement())
  idLoja  Int
  produto String
  desc String
}

model Empresas {
  id Int @id @default(autoincrement())
  idLoja  Int
  nome String
  budget Int @default(0)
  customers Int @default(0)
  task Int @default(0)
  total Int @default(0)
  grafico String
}

model Funcionarios {
  id Int @id @default(autoincrement())
  idLoja  Int
  nome String
  cargo String
}